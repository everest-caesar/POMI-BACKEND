# Backend Environment Variables
# Copy this file to .env.local for development
# Copy to .env.production for production deployment

# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://pomi_user:pomi_password@localhost:27017/pomi?authSource=admin

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,http://localhost:3000

# File Storage - S3/MinIO
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=marketplace
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_URL=http://localhost:9000

# Email Service - SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@pomi.community

# Admin Configuration
ADMIN_EMAIL=marakihay@gmail.com
ADMIN_PASSWORD=Christabel123@
ADMIN_INVITE_CODE=POMI_ADMIN_2024_SECRET_KEY

# Redis (for message queue, optional)
REDIS_URL=redis://redis:6379

# API
API_BASE_URL=http://localhost:3000/api/v1
